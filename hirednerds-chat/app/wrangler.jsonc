/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
  // Basic Worker configuration
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "app",
  "main": "src/index.js",
  "compatibility_date": "2025-12-11",

  "routes": [
    {
      "pattern": "jofdavies.com/api*",
      "zone_name": "jofdavies.com"
    }
  ],

   "kv_namespaces": [
    {
      "binding": "PDF_REQUESTS",
      "id": "dd88bd4a3be34411a98198ca1b284214"
    }
  ],

  // Observability (optional)
  "observability": {
    "enabled": true
  },

  // Bind Vectorize index
  "vectorize": [
    {
      "binding": "DOC_INDEX",
      "index_name": "jof-master-cv"
    }
  ],

  // Public (non-secret) environment variables
  "vars": {
    "OPENAI_API_BASE": "https://api.openai.com/v1",
    "OPENAI_EMBEDDING_MODEL": "text-embedding-3-small",
    "OPENAI_CHAT_MODEL": "gpt-4.1-mini"
  }







